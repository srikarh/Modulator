#:kivy 1.10.1
WindowManager:
    MainWindow:
    PitchWindow:
    CloneWindow:
    SeperationWindow:
<MainWindow>:
    name: "main"
    GridLayout:
        rows:1
        GridLayout:
            cols: 4
            Label:
                text: "Voice Modulator"
            Button:
                text: "Pitch Modulation"
                background_color: 0.1, 0.5, 0.6, 1
                on_release: 
                    root.manager.transition.direction = "left"
                    app.root.current = "pitch"
            Button:
                text: "Voice Cloning"
                background_color: 0.1, 0.5, 0.6, 1
                on_release: 
                    root.manager.transition.direction = "left"
                    app.root.current = "clone"
            Button:
                text: "Vocal Seperation"
                background_color: 0.1, 0.5, 0.6, 1
                on_release: 
                    root.manager.transition.direction = "left"
                    app.root.current = "seperation"

<PitchWindow>:
    name: "pitch"
    GridLayout:
        rows:1
        Label:
            text: str(slider.value)

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
            background_color: 0.1, 0.5, 0.6, 1
        Slider:
            id: slider
            min: -10
            max: 10
            step: 1
            orientation: 'horizontal'
            on_touch_move: 
                root.pitchChange(slider.value)

<CloneWindow>:
    name: "clone"
    GridLayout:
        rows:1

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
            background_color: 0.1, 0.5, 0.6, 1
        GridLayout:
            rows:2
            cols:2
            Button:
                text: "Preset 1"
                on_press: root.presetChange(1)
                background_color: 0.1, 0.5, 0.6, 1
            Button:
                text: "Preset 2"
                on_press: root.presetChange(2)
                background_color: 0.1, 0.5, 0.6, 1
            Button:
                text: "Preset 3"
                on_press: root.presetChange(3)
                background_color: 0.1, 0.5, 0.6, 1
            Button:
                text: "Preset 4"
                on_press: root.presetChange(4)
                background_color: 0.1, 0.5, 0.6, 1

<SeperationWindow>:
    name: "seperation"
    GridLayout:
        rows:1
        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
            background_color: 0.1, 0.5, 0.6, 1
        Button:
            text: "Start Recording"
            background_color: 0.1, 0.5, 0.6, 1
        Button:
            text: "Stop"
            background_color: 0.1, 0.5, 0.6, 1
        Button:
            text: "Play"
            background_color: 0.1, 0.5, 0.6, 1
 
