#:kivy 1.10.1
WindowManager:
    MainWindow:
    PitchWindow:
    CloneWindow:
<MainWindow>:
    name: "main"
    GridLayout:
        cols:1
        Label:
            text: "Voice Modulator"
        GridLayout:
            cols: 3
            Button:
                text: "Pitch Modulation"
                
                on_release: 
                    root.manager.transition.direction = "left"
                    app.root.current = "pitch"
            Button:
                text: "Voice Cloning"
                
                on_release: 
                    root.manager.transition.direction = "left"
                    app.root.current = "clone"

<PitchWindow>:
    name: "pitch"
    GridLayout:
        cols:1
        
        Slider:
            id: slider
            min: -10
            max: 10
            step: 1
            orientation: 'horizontal'
            on_touch_move: 
                root.pitchChange(slider.value)

        Label:
            text: str(slider.value)

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"


<CloneWindow>:
    name: "clone"
    GridLayout:
        cols:1
        GridLayout:
            rows:2
            Slider:
                id: slider
                min: -10
                max: 20
                step: 1
                orientation: 'horizontal'
                on_touch_move: 
                    root.pitchChange(slider.value)

            Label:
                text: str(slider.value)
            Button:
                text: "Voice 1"
        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

