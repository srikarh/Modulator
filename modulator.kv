#:kivy 1.10.1
WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"
    GridLayout:
        cols:1
        Label:
            text: "Voice Modulation"
        GridLayout:
            cols: 3
            Button:
                text: "Pitch Modulation"
                
                on_release: 
                    root.manager.transition.direction = "left"
                    app.root.current = "second"
                    

<SecondWindow>:
    name: "second"
    GridLayout:
        cols:1
        
        Slider:
            id: slider
            min: -10
            max: 10
            step: 1
            orientation: 'horizontal'
            on_touch_move: 
                root.pitchChange(slider.value)

        Label:
            text: str(slider.value)

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
